// All paths are relative to the application root
{
    // General
    "outputPath": "dist",
    "outputPathSubFolder": "static",
    "outputPathJsFolder": "js",
    "outputPathCssFolder": "css",
    "outputPathHtmlFolder": "dist/html", // from process.cwd(), ie root folder of frontend
    "webpackConfig": "./webpack.config.js",
    "appFolder": "app",
    "componentsFolder": "components",
    "containersFolder": "containers",
    "useServerRenderingOnPublish": true,

    // Server
    "port": 7000,
    "rootServerTemplatePath": "/internals/templates/server/",
    "publicPathPrefix": "/",
    "publicPath": "/static/",

    // Cli
    "rootCliTemplatePath": "/internals/templates/cli/",
    "scssFolder": "scss",
    "createScss": true,
    "createClass": true,
    "createPure": false,
    "createIndex": true,
    "createData": true,
    "createTest": true,
    "updateIndexScss": true,
    "updateIndexJs": true,
    "rootFolder": "./"
}
